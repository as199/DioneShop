{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}
<div class="bg-light p-3">
  <h1>Votre panier</h1>
</div>
{% if paniers | length > 0 %}
<table class="table">
  <thead>
    <tr>
      <th>Produit</th>
      <th>Prix</th>
      <th>Quantit√©</th>
      <th>Total</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {% for panier in paniers %}
    <tr>
      <td>{{ panier.product.title}}</td>
      <td>{{ panier.product.price}}</td>
      <td>{{ panier.quantity}}</td>
      <td>{{ panier.product.price * panier.quantity }}</td>
      <td>
        <a href="{{path('cart_remove', {'id':panier.product.id }) }}" class="btn
          btn-danger btn-sm">
          <i class="fas fa-trash"></i>
        </a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3" class="text-right">Total :</td>
      <td>{{ total}}</td>
      <td>
        <a href="#" class="btn btn-danger btn-sm">
          <i class="fa fa-check" style="font-size: 25px;color:green"
            aria-hidden="true"></i>
        </a>
      </td>
    </tr>
  </tfoot>
</table>
{% else %}
<p>Le panier est actuellement vide!</p>
{% endif %}

{% endblock %}
